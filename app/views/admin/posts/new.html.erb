<h2>New post</h2>
<fieldset class='admin'>
  <%= form_for @post, :url => admin_posts_path do |form| %>
    <%= render :partial => '/admin/errors', :locals => { :errors => @post.errors } %>
    <%= render :partial => 'form', :object => form %>
    <div class='actions'>
      <%= form.submit 'Create', :class => 'button' %>
    </div>
  <% end %>
</fieldset>